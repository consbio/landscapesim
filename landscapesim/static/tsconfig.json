{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outFile": "js/landscape-viewer.js",
        "sourceMap": true,
        "watch": false
    },
    "filesGlob": [
        "ts/**/*.ts",
        "ts/typings/**/*.d.ts",
        "!./node_modules/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
